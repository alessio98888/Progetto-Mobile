<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guitartrainer">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuitarTrainer">
        <activity
            android:name=".fretboardVisualization.FretboardVisualizationActivity"
            android:exported="true" />
        <activity
            android:name=".earTraining.EarTrainingGuessFunctionOptionsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".fretboardVisualization.FretboardVisualizationOptionsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".earTraining.EarTrainingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <provider
            android:name=".metronome.ProgrammableMetronomePresetsProvider"
            android:authorities="com.example.guitartrainer.metronome.ProgrammableMetronomePresetsProvider" />
        <provider
            android:name=".earTraining.EarTrainingCardStatsProvider"
            android:authorities="com.example.guitartrainer.earTraining.EarTrainingCardStatsProvider" />

        <activity
            android:name=".metronome.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">

            <!--
       the contents of the window are automatically panned so that the current focus is never obscured by the keyboard and users can always see what they are typing.
                                                                               The keyboard goes away only when "Done" is pressed
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>