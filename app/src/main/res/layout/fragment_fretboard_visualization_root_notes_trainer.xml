<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutRootNotesTrainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#301D1D"
    tools:context=".fretboardVisualization.FretboardVisualizationRootNotesTrainer">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/testo"
        android:layout_width="120dp"
        android:layout_height="81dp"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A" />

    <TextView
        android:id="@+id/noteToPlayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E6D8D8"
        android:textSize="200sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379"
        tools:text="Ab" />

    <TextView
        android:id="@+id/fretboardRootVisualizationCurrentRoundText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10/20" />

</androidx.constraintlayout.widget.ConstraintLayout>