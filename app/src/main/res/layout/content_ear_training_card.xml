<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_cmajor_one"
        android:layout_width="231dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#558B2F"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_cmajor_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/progressionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_iv_i_v_i"
                android:textColor="#6200EA"
                app:layout_constraintBottom_toBottomOf="@+id/textView_cmajor_for_one"
                app:layout_constraintEnd_toEndOf="@+id/textView_cmajor_one"
                app:layout_constraintStart_toStartOf="@+id/textView_cmajor_one"
                app:layout_constraintTop_toTopOf="@+id/textView_cmajor_for_one" />

            <TextView
                android:id="@+id/textView_cmajor_for_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:text="@string/c_major_scale"
                android:textColor="#CCFF90"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_cmajor_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_octave"
                android:textColor="#CCFF90"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toEndOf="@+id/textView_cmajor_for_one"
                app:layout_constraintTop_toBottomOf="@+id/textView_cmajor_for_one"
                app:layout_constraintVertical_bias="0.88" />

            <TextView
                android:id="@+id/earTrainingBest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEST: 89%"
                app:layout_constraintBottom_toBottomOf="@+id/textView_cmajor_one"
                app:layout_constraintEnd_toEndOf="@+id/textView_cmajor_for_one"
                app:layout_constraintStart_toStartOf="@+id/textView_cmajor_for_one"
                app:layout_constraintTop_toBottomOf="@+id/textView_cmajor_for_one"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>